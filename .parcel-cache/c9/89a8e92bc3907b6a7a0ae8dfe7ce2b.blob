*,
*::before,
*::after {
  padding: 0;
  margin: 0;
}

html,
body {
  width: 100;
}

body {
  box-sizing: border-box;
}

html {
  font-size: 62.5%;
  font-family: sans-serif, Arial, Helvetica;
}

body {
  font-size: 2rem;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-smooth: 1rem;
}

a {
  text-decoration: none;
  transition: color 0.25s;
}
a:link, a:visited {
  color: #000;
}
a:active, a:hover {
  color: #111;
}